<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_server_force_invoice_paid_state" model="ir.actions.server">
            <field name="name">Force paid state</field>
            <field name="condition">True</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="account.model_account_invoice" />
            <field name="state">code</field>
            <field name="code">action = env['account.invoice'].force_paid_state_action(context.get('active_ids', []))</field>
        </record>

        <record model="ir.values" id="action_force_invoice_paid_state">
            <field name="name">action_force_invoice_paid_state</field>
            <field name="action_id" ref="action_server_force_invoice_paid_state" />
            <field name="value" eval="'ir.actions.server,' + str(ref('action_server_force_invoice_paid_state'))" />
            <field name="key">action</field>
            <field name="model_id" ref="account.model_account_invoice" />
            <field name="model">account.invoice</field>
            <field name="key2">client_action_multi</field>
        </record>

        <record id="invoice_form" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_id']" position="before">
                    <field name="previous_move_id" groups="account.group_account_manager" attrs="{'invisible': [('move_id', '!=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>

</odoo>
