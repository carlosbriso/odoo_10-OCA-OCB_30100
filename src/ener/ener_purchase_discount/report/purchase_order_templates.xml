<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

		<template id="report_purchase_discount_inherit" inherit_id="purchase.report_purchaseorder_document">
			<xpath expr="//table[@class='table table-condensed'][1]//th[@class='text-right'][1]" position="after">
				<th class="text-right"><strong>Discount (%)</strong></th>
			</xpath>
			<xpath expr="//table[@class='table table-condensed'][1]//td[@class='text-right'][1]" position="after">
				<td class="text-right">
					<span t-field="line.discount"/>
				</td>
			</xpath>
		</template>

    </data>
</odoo>
