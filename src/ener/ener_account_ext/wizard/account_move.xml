<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!--account.move.confirm-->
        <record model="ir.ui.view" id="account_move_confirm_wizard_form">
            <field name="name">account.move.confirm.wizard.form"></field>
            <field name="model">account.move.confirm</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Confirm accounting entry">
                    <field name="msg_validate" readonly="1"/>
                    <footer>
                        <button class="oe_highlight" name="validate" string="Yes" type="object"/>
                        <button class="oe_highlight" string="Cancel" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <!--account.move-->
        <record model="ir.ui.view" id="account_move_button_wizard_form">
            <field name="name">account.move.button.wizard.form"></field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='post']" position="replace">
                     <button name="check_year" states="draft" string="Post" type="object" class="oe_highlight" groups="account.group_account_invoice"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>