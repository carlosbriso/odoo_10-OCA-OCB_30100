<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Groups -->

        <record model="ir.module.category" id="module_wallet_category">
            <field name="name">Wallet</field>
            <field name="description"/>
            <field name="sequence">17</field>
        </record>

        <record id="group_account_wallet_user" model="res.groups">
            <field name="name">Accounting / Wallet User</field>
            <field name="category_id" ref="module_wallet_category"/>
            <field name="implied_ids" eval="[(6, 0, [ref('base.group_user'),ref('base.group_partner_manager')])]"/>
        </record>

        <record id="group_account_wallet_moderator" model="res.groups">
            <field name="name">Accounting / Wallet Moderator</field>
            <field name="category_id" ref="module_wallet_category"/>
            <field name="implied_ids" eval="[(6, 0, [ref('group_account_wallet_user')])]"/>
        </record>

        <record id="account.group_account_manager" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_account_wallet_moderator'))]"/>
        </record>


        <!-- Rules -->

        <record id="account_wallet_transaction_user_read_rule" model="ir.rule">
            <field name="name">wallet transaction user read</field>
            <field name="model_id" ref="model_account_wallet_transaction"/>
            <field name="domain_force">['|',('state','not in',['draft','cancel']),('already_published','=',True)]</field>
            <field name="groups"  eval="[(6,0,[ref('group_account_wallet_user')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="account_wallet_transaction_user_own_rule" model="ir.rule">
            <field name="name">wallet transaction user own</field>
            <field name="model_id" ref="model_account_wallet_transaction"/>
            <field name="domain_force">[('sender_id.user_ids','in',user.id)]</field>
            <field name="groups"  eval="[(6,0,[ref('group_account_wallet_user')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="account_wallet_transaction_receiver_rule" model="ir.rule">
            <field name="name">wallet transaction receiver</field>
            <field name="model_id" ref="model_account_wallet_transaction"/>
            <field name="domain_force">[('receiver_id.user_ids','in',user.id)]</field>
            <field name="groups"  eval="[(6,0,[ref('group_account_wallet_user')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="account_wallet_transaction_moderator_rule" model="ir.rule">
            <field name="name">wallet transaction moderator all rights</field>
            <field name="model_id" ref="model_account_wallet_transaction"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups"  eval="[(6,0,[ref('group_account_wallet_moderator')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="base.res_currency_rule" model="ir.rule">
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</openerp>
